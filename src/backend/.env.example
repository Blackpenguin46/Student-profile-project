# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=student_profile_db
DB_USER=app_user
DB_PASSWORD=app_password123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-make-it-very-long-and-random
JWT_SECRET=your-jwt-secret-change-in-production-also-make-it-very-long-and-random
BCRYPT_ROUNDS=12

# Email Configuration (for Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@studentprofile.com

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/msword

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Competition Mode (enables demo features)
COMPETITION_MODE=true