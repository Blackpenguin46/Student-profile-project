{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "buildCommand": "cd src/frontend && npm install && npm run vercel-build",
  "outputDirectory": "src/frontend/build",
  "installCommand": "cd src/frontend && npm install",
  "rewrites": [
    {
      "source": "/((?!api).*).*",
      "destination": "/index.html"
    }
  ]
}